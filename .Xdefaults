!-------------------------------------------------------------------------------
! Evidlo's URxvt settings - 2015-09-24
!-------------------------------------------------------------------------------

!!! Format Settings !!!
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
URxvt.urgentOnBell:         true
!URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            10000
URxvt.internalBorder:       1
URxvt.lineSpace:            0

!!! Fonts !!!
! Note: certain characters may not render correctly if the font is too small
! Note: the fallback font must also be scaled when changing primary font size
URxvt.allow_bold:           true
URxvt.font:                 -*-terminus-medium-*-*-*-16-*-*-*-*-*-*-*,xft:DejaVu Sans:pixelsize=12
!URxvt.font:                xft:Waltograph:size=20
URxvt.boldFont:             -*-terminus-bold-*-*-*-16-*-*-*-*-*-*-*,xft:DejaVu Sans:pixelsize=12
!URxvt.BOLDfont:            xft:WaltographUI:size=14

! Fix font space
! URxvt*letterSpace: 4

!!! Scrollbar !!!
URxvt.scrollBar:            false
URxvt*scrollTtyKeypress:    true


!!! Perl extensions !!!
Urxvt*perl-lib:    /usr/lib/urxvt/perl/
URxvt.perl-ext-common:      default,matcher,keyboard-select,url-select
URxvt.matcher.button:       1


!!! Cursor !!!
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

!!! Pointer !!!
URxvt.pointerBlank:         true

!!! Colors !!!
URxvt.foreground:           #ffffff
URxvt.background:           #000000

!!! Keyboard Select !!!
URxvt.keysym.M-Escape:      perl:keyboard-select:activate
URxvt.keysym.M-s:           perl:keyboard-select:search

!!! Open youtubeliks in your own youtubescript
URxvt*matcher.pattern.3:        \\bhttp:\/\/(www.youtube|youtube).com\/watch\\?v=([\\w-]*)
URxvt*matcher.launcher.3:    mpv $2

! URL Select
URxvt.keysym.M-u:           perl:url-select:select_next